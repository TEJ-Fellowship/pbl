# Gemini Configuration (Required)
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=stripe-support
MONGODB_URI=mongodb://localhost:27017/stripe-support

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=stripe-docs

# Server Configuration
PORT=5000
HOST=localhost

# Security
JWT_SECRET=your_jwt_secret_here

# Frontend URLs
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_DEV=http://localhost:3000

# Processing Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=100
MAX_CHUNKS=10
BATCH_SIZE=5

# Rate Limiting
RATE_LIMIT_DELAY=1000
EMBEDDING_DELAY=200

# MCP Integration Configuration
# Google Custom Search API (Free: 100 queries/day)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here
MCP_ENABLED=true

# Stripe Configuration (SECURE - Never share these keys!)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
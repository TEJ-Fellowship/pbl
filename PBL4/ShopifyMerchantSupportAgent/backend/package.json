{
  "name": "shopify-merchant-support-agent-tier2",
  "version": "2.0.0",
  "type": "module",
  "private": true,
  "description": "Tier 2: Hybrid RAG Chat for Shopify Merchant Support (semantic + keyword search)",
  "scripts": {
    "prepare": "node -e \"require('fs').mkdirSync('data/shopify_docs', { recursive: true })\"",
    "scrape": "node ./src/scraper.js",
    "ingest": "node ./src/ingest.js",
    "chat": "node ./src/chat.js",
    "test-pinecone": "node ./src/test-pinecone.js",
    "dev": "node --watch server.js",
    "start": "npm run scrape && npm run ingest && npm run chat",
    "postinstall": "echo 'Puppeteer browser download skipped'"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@langchain/core": "^0.3.21",
    "langchain": "^0.3.35",
    "@pinecone-database/pinecone": "^3.0.0",
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "extract-zip": "^2.0.1",
    "flexsearch": "^0.8.212",
    "inquirer": "^9.3.7",
    "js-tiktoken": "^1.0.3",
    "mongodb": "^6.10.0",
    "mongoose": "^8.7.3",
    "natural": "^8.1.0",
    "uuid": "^10.0.0"
  },
  "optionalDependencies": {
    "@xenova/transformers": "^2.17.2"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}

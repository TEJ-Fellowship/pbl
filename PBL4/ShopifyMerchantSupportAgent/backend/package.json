{
  "name": "shopify-merchant-support-agent-tier2",
  "version": "2.0.0",
  "type": "module",
  "private": true,
  "description": "Tier 2: Hybrid RAG Chat for Shopify Merchant Support (semantic + keyword search)",
  "scripts": {
    "prepare": "node -e \"require('fs').mkdirSync('data/shopify_docs', { recursive: true })\"",
    "scrape": "node ./src/scraper.js",
    "ingest": "node ./src/ingest.js",
    "chat": "node ./src/chat.js",
    "optchat": "node ./src/optimized-chat.js",
    "test-tier2": "node ./test-tier2.js",
    "test-chat-tier2": "node ./test-chat-tier2.js",
    "test-pinecone": "node ./src/test-pinecone.js",
    "test-conversation": "node ./src/test-conversation-history.js",
    "test-token-windowing": "node ./src/test-token-windowing.js",
    "test-context-windowing-demo": "node ./src/test-context-windowing-demo.js",
    "start": "npm run scrape && npm run ingest && npm run chat",
    "start-optimized": "npm run scrape && npm run ingest && npm run optchat"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@pinecone-database/pinecone": "^3.0.0",
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.5",
    "flexsearch": "^0.8.212",
    "inquirer": "^9.3.7",
    "js-tiktoken": "^1.0.21",
    "markdown-it": "^14.1.0",
    "mongoose": "^8.0.0",
    "natural": "^8.1.0",
    "puppeteer": "^24.3.0",
    "uuid": "^9.0.0"
  },
  "optionalDependencies": {
    "@xenova/transformers": "^2.17.2"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}

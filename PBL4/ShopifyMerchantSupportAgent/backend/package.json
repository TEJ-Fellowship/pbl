{
  "name": "shopify-merchant-support-agent-tier1",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Tier 1: Basic RAG Chat for Shopify Merchant Support (scrape, chunk, embed, retrieve, chat)",
  "scripts": {
    "prepare": "node -e \"require('fs').mkdirSync('data/shopify_docs', { recursive: true })\"",
    "scrape": "node ./src/scraper.js",
    "ingest": "node ./src/ingest.js",
    "chat": "node ./src/chat.js",
    "start": "npm run scrape && npm run ingest && npm run chat"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.5",
    "inquirer": "^9.3.7",
    "puppeteer": "^24.3.0"
  },
  "optionalDependencies": {
    "@xenova/transformers": "^2.17.2"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
